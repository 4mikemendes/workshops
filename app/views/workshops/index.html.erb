<h1>Workhops</h1>

<tbody>

  <% @workshops.each do |workshop| %>
  <ul>
    <tr>
      <li>
        <td><%= link_to workshop.name, workshop %></td>
        <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
        <td><%= link_to 'Delete', workshop_path(workshop), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </li>
    </tr>
  </ul>
  <% end %>
</tbody>


